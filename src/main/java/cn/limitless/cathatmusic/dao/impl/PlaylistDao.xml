<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.limitless.cathatmusic.dao.PlaylistDao">
    <resultMap id="playListResultMap" type="cn.limitless.cathatmusic.entity.Playlist">
        <id column="id" property="id"/>
        <result column="created_time" property="createdTime"/>
        <result column="updated_time" property="updatedTime"/>
        <result column="name" property="name"/>
        <result column="description" property="description"/>
        <result column="status" property="status"/>
        <collection property="cover" column="cover_id" javaType="cn.limitless.cathatmusic.entity.File"
                    select="findCoverById"/>
        <collection property="creator" column="creator_id" javaType="cn.limitless.cathatmusic.entity.User"
                    select="findCreatorByCreatorId"/>
        <collection property="musicList" javaType="java.util.ArrayList" ofType="cn.limitless.cathatmusic.entity.Music"
                    select="findMusicList" column="id"/>
    </resultMap>
    <select id="findCoverById" resultMap="cn.limitless.cathatmusic.dao.FileDao.fileResultMap">
        SELECT *
        FROM `file`
        WHERE id IN (
            SELECT cover_id AS id
            FROM `playlist`
            WHERE `playlist`.id = #{cover_id})
    </select>
    <select id="findCreatorByCreatorId" resultMap="cn.limitless.cathatmusic.dao.UserDao.userResultMap">
        SELECT *
        FROM `user`
        WHERE id IN (
            SELECT creator_id AS id
            FROM `playlist`
            WHERE `playlist`.id = #{creator_id})
    </select>
    <select id="findMusicList" resultMap="cn.limitless.cathatmusic.dao.MusicDao.musicResultMap">
        SELECT *
        FROM music
        WHERE EXISTS(SELECT music_id as id
                     FROM playlist_music
                              INNER JOIN `playlist`
                                         ON `playlist`.id = playlist_music.playlist_id AND `playlist`.id = #{id}
                  )
    </select>
</mapper>