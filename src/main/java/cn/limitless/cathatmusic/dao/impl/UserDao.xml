<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.limitless.cathatmusic.dao.UserDao">
    <resultMap id="userResultMap" type="cn.limitless.cathatmusic.entity.User">
        <id column="id" property="id"/>
        <result column="created_time" property="createdTime"/>
        <result column="updated_time" property="updatedTime"/>
        <result column="username" property="username"/>
        <result column="nickname" property="nickname"/>
        <result column="password" property="password"/>
        <result column="gender" property="gender"/>
        <result column="locked" property="locked"/>
        <result column="enabled" property="enabled"/>
        <result column="last_login_ip" property="lastLoginIp"/>
        <result column="last_login_time" property="lastLoginTime"/>
        <collection property="roles" javaType="java.util.ArrayList" ofType="cn.limitless.cathatmusic.entity.Role"
                    select="findRoles" column="id"/>
    </resultMap>

    <select id="findRoles" resultType="cn.limitless.cathatmusic.entity.Role">
        SELECT *
        FROM role
        WHERE EXISTS(
                      SELECT role_id as id
                      FROM user_role
                               INNER JOIN `user` ON `user`.id = user_role.user_id AND `user`.id = #{id}
                  )
    </select>
</mapper>